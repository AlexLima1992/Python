# VERTOR Exercicio 1 - Lista 7  #

nomes = []
while True:
    nome = input ("Digite um nome:")
    nomes.append (nome)
    
    continuar = input ("Deseja inserir um novo nome? s/n")

    if continuar != "s" and continuar == "n":
        break
print()    
print ("Nomes inseridos:") 
for nome in nomes: 
    print(nome)

# Exercicio 2 - Lista 7 #

pessoas = []

for i in range (1,4):
    nome = input ("Digite um nome:")
    idade = input ("Digite a idade:")
    pessoas.append ((nome, idade))
    
    
print ("Nomes e Idade inseridos:") 
for (nome, idade) in pessoas: 
    print(nome, idade)

# Exercicio 3 - Lista 7 #

cadastro = []

while True:
    print ("Vamos Fazer o seu Cadatro Inicial")

    Usuario = input("Digite o Login de Usuário")
    Senha =  input ("Digite a senha")
    cadastro.append ((Usuario, Senha))
    print()
    print("Agora digite logim e senha pra acessar o sistema")
    print()

    Login = input ("Digite o Login")
    Senha2 = input ("Digite a senha")    

    if Login == Usuario and Senha == Senha2:
        print ("Bem Vindo,", Usuario,"!")
        
        continuar = input ("Deseja inserir um novo nome? Sim ou Não")
    
        if continuar != "Sim":
            break
    
    else:
        print("Dados Inválidos, tente novamente")
print()        
print ("Usuário e Senha inseridos:") 
for (Usuario, Senha) in cadastro: 
    print(Usuario, Senha)


# Exercicio 4 - Lista 7 #

numeros = []

for i in range (0,4):
    nun = input ("Digite um numero:")
    numeros.append (nun)
    
print ("Numeros inseridos:") 
for (num) in numeros: 
    print(num)

# Exercício 5 - lista 7 #

M = 0
for i in range(1, 9):
    Num = int(input("Digite um numero: "))

    if Num > M:
       M = Num
print("O maior Numero é o:", M)
