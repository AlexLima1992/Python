# Exercicio 1 #
login = input("Digite o Login")
Senha =  input ("Digite a senha")

if login == "Admin" and Senha == "123":
 
    Nome_do_Produto = input("Digite o Nome do Produto:")
    Preco_Unitario = float(input("Digite o Preço Unitário: R$ "))
    Quantidade = int(input("Digite a Quantidade:"))
    Resposta = input("Digite a Forma de Pagamento, PIX, Cartão 1x ou Cartão 2x:")
    
    Total = Quantidade * Preco_Unitario
    Descpix = Total*0.15 
    Desc1x = Total
    Juros = Total*0.05
    
    print ("\n")
    print ("Nome do Produto: ", Nome_do_Produto) 
    print ("Preço Unitário: R$", Preco_Unitario) 
    print ("Quantidade: ", Quantidade, "undidade(s)")
    
    if Resposta == "PIX":
        Total = Total - Descpix 
        print ("Valor a Pagar: R$", Total)
        
    elif Resposta == "Cartão 1x":
        print ("Valor a Pagar: R$", Total)
            
    elif Resposta == "Cartão 2x":
        Total = Total + Juros
        print ("Valor a Pagar: R$", Total)

else:
    print("Login ou Senha invalidos")   

# Exercicio 2 #

print ("Vamos Fazer o seu Cadatro Inicial")

Usuario = input("Digite o Login de Usuário")
Senha =  input ("Digite a senha")

Login = input ("Digite o Login")
Senha2 = input ("Digite a senha")    


if Login == Usuario and Senha == Senha2:
    print ("Bem Vindo,", Usuario,"!")
    
else:
    print("Dados Inválidos")

# Exercicio 3 #

print ("Vamos Fazer o seu Cadatro Inicial ok?")

Usuario = input("Digite o Login de Usuário")
Senha =  input ("Digite a senha")

    
print ("\n")
print ("Agora efetue login para acessar o sistema")
Login = input ("Digite o Login")
Senha2 = input ("Digite a senha")    


if Login == Usuario and Senha == Senha2:
    print ("Bem Vindo,", Usuario,"!")
    
    print ("\n")  
    print ("Vamos Calcular a área do triangulo?")
    base =  float(input("Qual o valor da Base?"))
    altura = float(input("Qual o valor da Altura?"))
    area = base * altura /2 
    print ("\n")
    print ("Base:", base)
    print ("Altura:", altura)
    print ("Área do Triangulo:", area,"m²")
    
else:
    print("Dados Inválidos")
